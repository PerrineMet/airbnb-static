<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path flat.picture %>'); height: 50vh; background-position: center;"></div>

<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner text-center">
            <%= image_tag flat.owner_picture, class: "img-circle img-size" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="header-flat-name">
            <h1><%= flat.summary %></h1>
            <p><%= flat.city %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="">
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout" id="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" value="Book it" class="btn btn-danger" style="width:100%">
        </form>
      </div>
    </div>
  </div>
</div>
<div id="flat-details">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="flat-presentation">
          <h3>About this flat</h3>
          <p><%= flat.presentation %></p>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="flat-space">
          <div class="row">
            <div class="col-xs-4">
              <h4>The Space</h4>
            </div>
            <div class="col-xs-4">
              <ul>
                <li>Accommodates: </li>
                <li>Bathrooms: </li>
                <li>Bed type: </li>
                <li>Bedrooms: </li>
              </ul>
             </div>
             <div class="col-xs-4">
              <ul>
                <li>Beds: </li>
                <li>Property type: </li>
                <li>Room type: </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="flat-amenities">
          <h4>Amenities</h4>
        </div>
      </div>
    </div>
  </div>
</div>
















